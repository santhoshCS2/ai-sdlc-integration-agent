# SDLC Automation Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://sdlc_user:sdlc_password@localhost:5432/sdlc_automation

# AI/LLM Configuration
GROQ_API_KEY=your_groq_api_key_here

# GitHub Integration (Optional - for automatic repository creation)
GITHUB_TOKEN=your_github_personal_access_token_here

# Security
SECRET_KEY=your-super-secret-key-for-jwt-tokens-here-make-it-long-and-random

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Optional: Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Optional: File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Optional: Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Optional: Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Docker-specific overrides (uncomment when using Docker)
# DATABASE_URL=postgresql://sdlc_user:sdlc_password@postgres:5432/sdlc_automation
# REDIS_URL=redis://redis:6379